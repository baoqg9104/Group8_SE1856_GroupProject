<Window x:Class="Group8_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group8_WPF"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:ThemeManager.RequestedTheme="Light"
        mc:Ignorable="d"
        Title=""
        Height="750"
        Width="1150"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded">
    <Window.Resources>
        <local:SkillsConverter x:Key="SkillsConverter" />
    </Window.Resources>
    <Border CornerRadius="12"
            Background="#FAFAFA">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!-- Window Control Buttons -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="8" />
                </Grid.ColumnDefinitions>
                <Image Source="Images/job-search.png"
                       Width="52"
                       HorizontalAlignment="Left"
                       Margin="30,25,0,-29" />
                <Button Grid.Column="1"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="20"
                        Click="btnMinimize_Click"
                        Focusable="False"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#278BEF" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#278BEF" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="25"
                                    Height="25"
                                    CornerRadius="30"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="Images/minus.png"
                           Width="12"
                           Height="13" />
                </Button>
                <Button Grid.Column="2"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="20"
                        Click="btnMaximize_Click"
                        Focusable="False"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="Green" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="Green" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="25"
                                    Height="25"
                                    CornerRadius="30"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="Images/window-restore.png"
                           Width="12"
                           Height="12" />
                </Button>
                <Button Grid.Column="3"
                        BorderThickness="0"
                        Foreground="White"
                        FontSize="15"
                        Click="btnClose_Click"
                        Focusable="False"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background"
                                    Value="#C62DAE" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="#C62DAE" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="25"
                                    Height="25"
                                    CornerRadius="30"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Image Source="Images/xmark.png"
                           Width="12" />
                </Button>
            </Grid>
            <!-- Main Content -->
            <Grid Grid.Row="1"
                  Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Header with Title and Login/Signup -->
                <Grid Grid.Row="0"
                      Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,0,10,0">
                        <Button x:Name="LoginBtn"
                                Content="Log in"
                                Margin="0,0,10,0"
                                Background="#33055170"
                                Width="76"
                                Height="34" />
                        <Button x:Name="SignupBtn"
                                Content="Sign up"
                                Foreground="White"
                                Background="#FF116DFF"
                                Width="77"
                                Height="34"
                                Click="Signup_Click" />
                    </StackPanel>
                </Grid>
                <!-- Tab Control -->
                <TabControl x:Name="MainTabControl"
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            SelectionChanged="MainTabControl_SelectionChanged">
                    <!-- Jobs Tab -->
                    <TabItem x:Name="Jobs"
                             Header="Jobs">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!-- Search Controls -->
                            <Grid Grid.Row="0"
                                  Margin="0,14,10,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Left">
                                    <Button x:Name="ViewCompanyBtn"
                                            Height="34"
                                            Width="132"
                                            Click="ViewCompany_Click"
                                            Margin="10,0,0,0">View Company</Button>
                                </StackPanel>
                                <StackPanel Grid.Column="1"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <ComboBox x:Name="CityBox"
                                              Width="130"
                                              SelectedIndex="0"
                                              Height="34"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0"
                                              Grid.Column="1">
                                        <ComboBoxItem Content="All Cities" />
                                        <ComboBoxItem Content="Ha Noi" />
                                        <ComboBoxItem Content="Ho Chi Minh" />
                                        <ComboBoxItem Content="Da Nang" />
                                        <ComboBoxItem Content="Others" />
                                    </ComboBox>
                                    <TextBox x:Name="SearchBox"
                                             Width="227"
                                             Height="34"
                                             KeyDown="SearchBox_KeyDown"
                                             HorizontalAlignment="Center"
                                             Margin="0,0,10,0"
                                             VerticalAlignment="Center"
                                             Grid.Column="1" />
                                    <Button Content="Search"
                                            Height="34"
                                            Width="72"
                                            Click="Search_Click"
                                            Grid.Column="1" />
                                </StackPanel>
                                <StackPanel Grid.Column="2"
                                            Orientation="Horizontal"
                                            HorizontalAlignment="Center">
                                    <Button x:Name="ApplyBtn"
                                            Content="Apply now"
                                            Height="34"
                                            Width="99"
                                            Click="Apply_Click" />
                                </StackPanel>
                            </Grid>
                            <!-- Jobs DataGrid -->
                            <DataGrid x:Name="JobDataGrid"
                                      Grid.Row="1"
                                      Margin="0,10,0,0"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      SelectionChanged="JobDataGrid_SelectionChanged">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness"
                                                Value="0,0,1,1" />
                                        <Setter Property="BorderBrush"
                                                Value="Gray" />
                                        <Setter Property="Padding"
                                                Value="5" />
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Height"
                                                Value="30" />
                                        <Setter Property="Background"
                                                Value="#007ACC" />
                                        <Setter Property="Foreground"
                                                Value="White" />
                                        <Setter Property="FontWeight"
                                                Value="SemiBold" />
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Center" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Company"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Company.CompanyName}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Job Title"
                                                            Width="0.8*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding JobTitle}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Description"
                                                            Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding JobDescription}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Skills"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding JobSkills, Converter={StaticResource SkillsConverter}}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Location"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Location}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Salary"
                                                            Width="0.7*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Salary, StringFormat=C0}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Currency"
                                                            Width="0.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CurrencyCode}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Application deadline"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ApplicationDeadline, StringFormat='{}{0:dd/MM/yyyy}'}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                    <!-- Companies Tab -->
                    <TabItem x:Name="Companies"
                             Header="Companies">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!-- Company Search Controls -->
                            <Grid Grid.Row="0"
                                  Margin="0,10,-267,10">
                                <ComboBox x:Name="CountyBox"
                                          Width="130"
                                          SelectedIndex="0"
                                          Height="34"
                                          Margin="347,0,0,0"
                                          VerticalAlignment="Center">
                                    <ComboBoxItem Content="All countries" />
                                    <ComboBoxItem Content="Vietnam" />
                                    <ComboBoxItem Content="Japan" />
                                    <ComboBoxItem Content="Singapore" />
                                    <ComboBoxItem Content="Australia" />
                                    <ComboBoxItem Content="South Korea" />
                                    <ComboBoxItem Content="Others" />
                                </ComboBox>
                                <TextBox x:Name="SearchCompanyBox"
                                         KeyDown="SearchCompanyBox_KeyDown"
                                         HorizontalAlignment="Left"
                                         Width="227"
                                         Margin="490,0,680,0" />
                                <Button Content="Search"
                                        Height="34"
                                        Width="72"
                                        Click="SearchCompany_Click"
                                        Margin="729,0,0,0" />
                            </Grid>
                            <!-- Companies DataGrid -->
                            <DataGrid x:Name="CompanyDataGrid"
                                      Grid.Row="1"
                                      Margin="0,10,0,0"
                                      Background="#FAFAFA"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness"
                                                Value="0,0,1,1" />
                                        <Setter Property="BorderBrush"
                                                Value="Gray" />
                                        <Setter Property="Padding"
                                                Value="5" />
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Height"
                                                Value="30" />
                                        <Setter Property="Background"
                                                Value="#007ACC" />
                                        <Setter Property="Foreground"
                                                Value="White" />
                                        <Setter Property="FontWeight"
                                                Value="SemiBold" />
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Center" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Company Name"
                                                            Width="1.5*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CompanyName}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Company Type"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CompanyType}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Industry"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Industry}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Description"
                                                            Width="2*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Description}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Country"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Country}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="JobApplied"
                             Header="Job Applied">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!-- Company Search Controls -->
                            <!-- Companies DataGrid -->
                            <Button x:Name="WithdrawBtn"
                                    Margin="925,19,0,0"
                                    Grid.RowSpan="2"
                                    VerticalAlignment="Top"
                                    Click="Withdraw_Click">Withdraw</Button>
                            <DataGrid x:Name="JobAppliedDataGrid"
                                      Grid.Row="1"
                                      Margin="0,70,0,10"
                                      Background="#FAFAFA"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      SelectionChanged="JobAppliedGrid_SelectionChanged">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness"
                                                Value="0,0,1,1" />
                                        <Setter Property="BorderBrush"
                                                Value="Gray" />
                                        <Setter Property="Padding"
                                                Value="5" />
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Height"
                                                Value="30" />
                                        <Setter Property="Background"
                                                Value="#007ACC" />
                                        <Setter Property="Foreground"
                                                Value="White" />
                                        <Setter Property="FontWeight"
                                                Value="SemiBold" />
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Center" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Job title"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Job.JobTitle}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Company"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Job.Company.CompanyName}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Application date"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding ApplicationDate}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Status"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="View CV"
                                                            Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="View CV"
                                                        Click="ViewCVButton_Click"
                                                        Tag="{Binding CvFilePath}"
                                                        Margin="5,5,5,5"
                                                        FontSize="12"
                                                        Cursor="Hand" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="InterviewSchedule"
                             Header="Interview Schedule">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"
                                               MinHeight="74" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel VerticalAlignment="Center"
                                        HorizontalAlignment="Right"
                                        Height="34">
                                <Button x:Name="ConfirmBtn"
                                        Content="Confirm"
                                        Margin="0,0,100,0"
                                        Click="Confirm_Click" />
                            </StackPanel>
                            <DataGrid x:Name="InterviewDataGrid"
                                      Grid.Row="1"
                                      Margin="0,0,10,10"
                                      Background="#FAFAFA"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      SelectionMode="Single"
                                      SelectionChanged="InterviewDataGrid_SelectionChanged">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness"
                                                Value="0,0,1,1" />
                                        <Setter Property="BorderBrush"
                                                Value="Gray" />
                                        <Setter Property="Padding"
                                                Value="5" />
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Resources>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Height"
                                                Value="30" />
                                        <Setter Property="Background"
                                                Value="#007ACC" />
                                        <Setter Property="Foreground"
                                                Value="White" />
                                        <Setter Property="FontWeight"
                                                Value="SemiBold" />
                                        <Setter Property="HorizontalContentAlignment"
                                                Value="Center" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Header="Job title"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding JobApplication.Job.JobTitle}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Company"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding JobApplication.Job.Company.CompanyName}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Interview date"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding InterviewDate}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Status"
                                                            Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Status}"
                                                           TextWrapping="Wrap"
                                                           Padding="5" />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="MyProfile"
                             Header="My Profile">
                        <ScrollViewer>
                            <StackPanel Margin="20"
                                        Width="512"
                                        Height="Auto">
                                <!-- Header -->
                                <!-- Name Field Full Width -->
                                <Grid Margin="0,20,0,20"
                                      Height="235">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <!-- Left Column -->
                                    <StackPanel Grid.Column="0"
                                                Grid.Row="0"
                                                Margin="7,-10,10,20">
                                        <TextBlock Text="Name:"
                                                   FontWeight="Bold"
                                                   Margin="0,10,0,5" />
                                        <TextBox x:Name="NameTextBox"
                                                 Width="239"
                                                 Height="30"
                                                 Padding="5"
                                                 BorderBrush="#FF116DFF"
                                                 BorderThickness="1" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1"
                                                Grid.Row="0"
                                                Margin="7,-10,5,14">
                                        <TextBlock Text="Password:"
                                                   FontWeight="Bold"
                                                   Margin="0,10,0,5" />
                                        <PasswordBox x:Name="PasswordBox"
                                                     Width="239"
                                                     Height="32"
                                                     Padding="5"
                                                     BorderBrush="#FF116DFF"
                                                     BorderThickness="1"></PasswordBox>
                                    </StackPanel>
                                    <!-- Left Column -->
                                    <StackPanel Grid.Column="0"
                                                Margin="7,68,10,27"
                                                Grid.RowSpan="3">
                                        <!-- Email -->
                                        <TextBlock Text="Email:"
                                                   FontWeight="Bold"
                                                   Margin="0,10,0,5" />
                                        <TextBox x:Name="EmailTextBox"
                                                 Width="239"
                                                 Height="30"
                                                 Padding="5"
                                                 BorderBrush="#FF116DFF"
                                                 BorderThickness="1" />
                                        <!-- Gender -->
                                        <TextBlock Text="Gender:"
                                                   FontWeight="Bold"
                                                   Margin="0,10,0,5" />
                                        <ComboBox x:Name="GenderComboBox"
                                                  Width="238"
                                                  Height="30"
                                                  Padding="5"
                                                  BorderBrush="#FF116DFF"
                                                  BorderThickness="1">
                                            <ComboBoxItem Content="Male" />
                                            <ComboBoxItem Content="Female" />
                                        </ComboBox>
                                    </StackPanel>
                                    <!-- Right Column -->
                                    <StackPanel Grid.Column="1"
